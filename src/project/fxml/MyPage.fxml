<GridPane prefHeight="370.0" prefWidth="850.0" style="-fx-background-color: NAVY;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controller.MyPageController">

  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="💎 마이 페이지" textFill="WHITE" GridPane.halignment="CENTER">
         <font>
            <Font size="44.0" />
         </font>
         <GridPane.margin>
            <Insets right="20.0" top="10.0" />
         </GridPane.margin>
      </Label>
      <Button maxHeight="70.0" mnemonicParsing="false" onAction="#resOk" prefWidth="250.0" style="-fx-background-color: LIGHTSKYBLUE;" text="예약 확인 및 취소" textFill="WHITE" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="40.0" right="120.0" />
         </GridPane.margin>
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Button>
      <Button fx:id="myResBtn" maxHeight="70.0" mnemonicParsing="false" onAction="#res" prefWidth="250.0" style="-fx-background-color: LIGHTSKYBLUE;" text="진료 예약" textFill="WHITE" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="40.0" left="120.0" />
         </GridPane.margin>
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#Logout" style="-fx-background-color: LIGHTSTEELBLUE;" text="로그아웃" textFill="WHITE" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets right="20.0" top="50.0" />
         </GridPane.margin></Button>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="MEDIUMTURQUOISE" height="370.0" stroke="BLACK" strokeType="INSIDE" width="15.0" GridPane.halignment="LEFT" GridPane.valignment="TOP" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="MEDIUMTURQUOISE" height="370.0" stroke="BLACK" strokeType="INSIDE" width="15.0" GridPane.halignment="RIGHT" GridPane.valignment="TOP" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="MEDIUMTURQUOISE" height="15.0" stroke="BLACK" strokeType="INSIDE" width="850.0" GridPane.halignment="LEFT" GridPane.valignment="TOP" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="MEDIUMTURQUOISE" height="15.0" stroke="BLACK" strokeType="INSIDE" width="850.0" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
      <Button fx:id="btnmy" mnemonicParsing="false" onAction="#myInfo" style="-fx-background-color: LIGHTSTEELBLUE;" text="회원정보수정/탈퇴" textFill="WHITE" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets right="20.0" top="20.0" />
         </GridPane.margin>
      </Button>
      <Label fx:id="myPageId" text="" textFill="WHITE" GridPane.halignment="LEFT" GridPane.valignment="TOP">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
         <GridPane.margin>
            <Insets left="30.0" top="30.0" />
         </GridPane.margin>
      </Label>
   </children>
</GridPane>
